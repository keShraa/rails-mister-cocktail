<div class="container">
  <h1 class="text-white my-5"><%= @cocktail.name %></h1>

  <div class="jumbotron">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit 'Add this dose', class:'btn btn-primary'%>
    <% end %>
    <%= link_to 'Back to cocktails', cocktails_path, class:'btn btn-primary my-2' %>
  </div>
</div>
