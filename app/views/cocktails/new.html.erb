<div class="container">
  <h1 class="text-white my-5">Create a cocktail</h1>

  <div class="jumbotron">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :rating %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="d-flex justify-content-between">
        <%= f.submit 'Add this cocktail', class:'btn btn-success text-white my-2'%>
        <%= link_to 'Back to cocktails', cocktails_path, class:'btn btn-success text-white  my-2' %>
      </div>
    <% end %>
  </div>
</div>
