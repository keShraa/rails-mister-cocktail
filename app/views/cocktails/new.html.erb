<div class="container">
  <div class="jumbotron my-5">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :rating %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="d-flex justify-content-between">
        <%= f.submit 'Add this cocktail', class:'btn btn-primary my-2'%>
        <%= link_to 'Back to cocktails', cocktails_path, class:'btn btn-primary my-2' %>
      </div>
    <% end %>
  </div>
</div
