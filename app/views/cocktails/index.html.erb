<div id="banner">
  <h1>Fancy cocktails</h1>
  <p>Be delighted with our fabulous cocktails!!!</p>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-success", style: "color: black; width: 160px" %>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-sm-12 col-md-6">
        <div class="card-category">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <ul class="list-unstyled">
            <li><% 3.times do %>
              <i class="fas fa-star"></i>
            <% end %>
            <% 2.times do %>
              <i class="far fa-star"></i>
            <% end %></li>
            <br>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
