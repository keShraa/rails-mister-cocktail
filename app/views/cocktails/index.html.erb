<div id="banner">
  <h1>Fancy cocktails</h1>
  <p>Be delighted with our fabulous cocktails!!!</p>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-success", style: "color: black; width: 160px" %>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-sm-12 col-md-6">
        <div class="card-category">
          <h2><%= cocktail.name %></h2>
          <ul class="list-unstyled">
            <li><% cocktail.rating.times do %>
              <i class="fas fa-star"></i>
            <% end %>
            <% (5 - cocktail.rating).times do %>
              <i class="far fa-star"></i>
            <% end %></li>
            <br>
          </ul>
          <div>
            <%= link_to 'Details', cocktail_path(cocktail), class:'btn btn-success mx-4' %>
            <%= link_to 'Delete', cocktail_path(cocktail), method: :delete, class:'btn btn-warning mx-4' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
